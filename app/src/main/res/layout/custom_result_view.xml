<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cresult_view_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="Mobile Application Development Lab"
            android:textColor="#393737"
            android:textSize="10sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/cresult_view_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EAEEF4"
            android:gravity="center"
            android:text="120"
            android:textColor="#393737"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/cresult_view_obtained"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="#E8F6B7"
            android:gravity="center"
            android:text="100"
            android:textColor="#393737"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/cresult_view_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E8F6B7"
            android:gravity="center"
            android:textColor="#393737"
            android:textStyle="bold"
            android:typeface="serif"
            tools:text="A" />
    </LinearLayout>
</RelativeLayout>